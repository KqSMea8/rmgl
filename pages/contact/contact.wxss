/* pages/index/to_news/to_news.wxss */
@import "/templates/jobCard/jobCard.wxss";
@import "/templates/personCard/personCard.wxss";
page {
  background-color: #f7f7f7;
}

.tab {
  height: 140rpx;
  background-color: white;
  position: fixed;
  width: 100%;
  top: 0rpx;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center
}

.tab .tent {
  font-size: 33rpx;
  margin-bottom: 30rpx;
}

.jia_img {
  height: 80rpx;
  width: 90rpx;
}

.new_imgtent {
  height: 180rpx;
  width: 190rpx;
}

.tab .fabu {
  font-size: 33rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.xiahuaxia {
  width: 80%;
  text-align: center;
  margin: 0 auto;
  position: relative;
  top: 60rpx;
}

.time {
  text-align: center;
  padding: 5rpx 20rpx 5rpx 20rpx;
  width: 200rpx;
  font-size: 26rpx;
  background-color: #e8e8e8;
}

.new_top_txt {
  width: 50%;
  position: relative;
  top: 18rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 30rpx;
  color: #787878;
  background-color: #f7f7f7;
}

/* 聊天内容 */

.news {
  padding-top: 200rpx;
  margin-top: 30rpx;
  text-align: center;
  margin-bottom: 100rpx;
}

.img_null {
  height: 60rpx;
}

.l {
  height: 5rpx;
  width: 20%;
  margin-top: 30rpx;
  color: #000;
}

/* 聊天 */

.page_row {
  display: flex;
  flex-direction: row-reverse;
}

.my_right {
  margin-top: 20rpx;
  float: right;
  position: relative;
  right: 40rpx;
}

.you_left {
  margin-top: 20rpx;
  float: left;
  position: relative;
  left: 5rpx;
}

.new_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.new_txt {
  border-radius: 7px;
  background-color: #95d4ff;
  padding: 10rpx 30rpx 0rpx 30rpx;
  font-size: 35rpx;
}

.sanjiao {
  top: 20rpx;
  position: relative;
  width: 0px;
  height: 0px;
  border-width: 10px;
  border-style: solid;
}

.my {
  border-color: transparent transparent transparent #95d4ff;
}

.you {
  border-color: transparent #95d4ff transparent transparent;
}

.sendmessage {
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
}

.sendmessage input {
  width: 80%;
  height: 40px;
  background-color: white;
  line-height: 60px;
  font-size: 16px;
  border: 1px solid #d0d0d0;
  padding-left: 10px;
}

.sendmessage button {
  width: 18%;
  height: 40px;
  background: #fff;
  color: #000;
  line-height: 40px;
  font-size: 16px;
}

.historycon {
  height: 90%;
  width: 100%;
  flex-direction: column;
  display: flex;
  margin-top: 30rpx;
  border-top: 0px;
}

.hei {
  margin-top: 20px;
  height: 20rpx;
}

.history {
  height: 100%;
  margin-top: 15px;
  margin: 10px;
  font-size: 14px;
  line-height: 40px;
  word-break: break-all;
}

.job{
  height:80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #a8a8a8;
  margin-left: 40rpx;
}

.job-on{
  color:white;
  background: aqua;
  height:100rpx;
}

.title{
  font-size:35rpx;
  font-weight: 500;
}

.children{
  font-size:30rpx;
  font-weight: 400;
  margin-left: 30rpx;
  color:#494949;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.cjob{
  font-weight:400;margin-left:40rpx;font-size:33rpx;height:70rpx;line-height:70rpx;border-bottom:1rpx solid #a8a8a8
}

.btn{
  margin-top:20rpx;
  width:500rpx;
  justify-self: center;
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
  color:white;
  background:aqua;
  border-radius: 10rpx;
  margin-bottom:40rpx;
}
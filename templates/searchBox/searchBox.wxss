.stickyHeader{
  z-index:1;
  position: sticky;
  top:0;
  width:100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: linear-gradient(to right,rgba(255, 224, 156, 0),rgba(255, 138, 79, 0.15)); */
  background-color:white;
}

.search_border{
  width:90%;
  height: 53rpx;
  border-radius: 70rpx;
}

.search_border::after{
  opacity: 0.3
}

.search::after{
  border: none
}

.photo::after{
  border: none
}

.search{
  background:#eeeeee;
  display: flex;
  align-items: center;
  border-radius: 70rpx;
  height: 70rpx;
}

.search icon{
  margin-left: 30rpx;
  position: relative
}
